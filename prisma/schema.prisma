generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Blog {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  photos      String[]
  description String
  title       String
  coverPhoto  String
  postDate    DateTime
  postType    String[]
  highlights  String
  sample Boolean?
  orderBy Int?
}

model Portfolio {
  id  String   @id @default(auto()) @map("_id") @db.ObjectId
  url String
  tag String[]
}

type PhotoObject {
  photo String
  tag   String
}
